<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "bootstrap.php.cache" >

    <testsuites>
        <testsuite name="ClubMaster Test Suite">
            <directory>../src/*/DashboardBundle/Tests</directory>
            <directory>../src/*/EventBundle/Tests</directory>
            <directory>../src/*/FeedbackBundle/Tests</directory>
            <directory>../src/*/LayoutBundle/Tests</directory>
            <directory>../src/*/LogBundle/Tests</directory>
            <directory>../src/*/MailBundle/Tests</directory>
            <directory>../src/*/MenuBundle/Tests</directory>
            <directory>../src/*/MessageBundle/Tests</directory>
            <directory>../src/*/ShopBundle/Tests/Controller</directory>
            <directory>../src/*/TaskBundle/Tests</directory>
            <directory>../src/*/TeamBundle/Tests/Controller</directory>
            <directory>../src/*/UserBundle/Tests/Controller</directory>
            <directory>../src/*/WeatherBundle/Tests/Controller</directory>
        </testsuite>
    </testsuites>

    <!--
    <php>
        <server name="KERNEL_DIR" value="/path/to/your/app/" />
    </php>
    -->

    <filter>
        <whitelist>
            <directory>../src</directory>
            <exclude>
                <directory>../src/*/*Bundle/Resources</directory>
                <directory>../src/*/*Bundle/Tests</directory>
                <directory>../src/*/Bundle/*Bundle/Resources</directory>
                <directory>../src/*/Bundle/*Bundle/Tests</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>

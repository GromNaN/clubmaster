{% extends "ClubEventBundle::base.html.twig" %}

{% block header %}<div class="page-header"><h1>{{ event.eventName }}</h1></div>{% endblock %}

{% block pagenav %}
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<div class="navbar">
    <div class="navbar-inner">
        <ul class="nav">
            {% if event.isAttending(user) %}
            <li><a href="{{ path('event_event_unattend', {'id':event.id}) }}">{% trans %}Unattend{% endtrans %}</a></li>
            {% else %}
            <li><a href="{{ path('event_event_attend', {'id':event.id}) }}">{% trans %}Attend{% endtrans %}</a></li>
            {% endif %}
        </ul>
    </div>
</div>
{% endif %}

{% endblock %}

{% block body %}
<div class="box-03 event box">

  <p class="nomt low">
    {% trans with {'%date%':event.startDate|club_datetime} %}Start date: %date%{% endtrans %}<br />
    {% trans with {'%date%':event.stopDate|club_datetime} %}Stop date: %date%{% endtrans %}<br />
  </p>

  <h2>{% trans %}Description{% endtrans %}</h2>
  <p class="nomt low">{{ event.description|raw }}</p>

</div> <!-- /box-03 -->

{% endblock %}

{% extends "ClubEventBundle::base.html.twig" %}

{% block pagenav %}
<div class="navbar">
    <div class="navbar-inner">
        <ul class="nav">
            <li><a href="{{ path('club_event_adminevent_new', {'year':current|date('Y'), 'month':current|date('n')}) }}">{% trans %}Create event{% endtrans %}</a></li>
            <li><a href="{{ path('club_event_event_ical') }}">{% trans %}iCal format{% endtrans %}</a></li>
        </ul>
    </div>
</div>
{% endblock %}

{% block body %}
    <div class="nav-top box">
        {% include "ClubEventBundle:AdminEvent:_navigation.html.twig" %}
    </div> <!-- /nav-top -->
      <!-- Calendar -->
      <table id="calendar-02" class="width100 style">
        {% for event in events %}
        <tr>
          <th style="width:100px;">{{ event.startDate|date('l') }}<br />{{ event.startDate|date('Y/n/j') }}</th>
          <td class="note-01">
            <ul class="nostyle">
              <li>
                <strong>{{ event.eventName }}</strong><br />
                {% trans with {'%date%':event.startDate|club_datetime} %}Start date: %date%{% endtrans %}<br />
                {% trans with {'%date%':event.stopDate|club_datetime} %}Stop date: %date%{% endtrans %}<br />
                {% if event.maxAttends == 0 %}
                {% trans with {'%attends%':event.attends|length} %}Attends: %attends% / No limit{% endtrans %}<br />
                {% else %}
                {% trans with {'%attends%':event.attends|length,'%limit%':event.maxAttends} %}Attends: %attends% / %limit%{% endtrans %}<br />
                {% endif %}

                {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('admin_event_event_edit', { 'id':event.id })} %} {% trans %}Edit{% endtrans %}&#160;
                {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('admin_event_event_delete', { 'id':event.id })} %} {% trans %}Delete{% endtrans %}&#160;
                {% include "ClubLayoutBundle:Default:attends_link.html.twig" with {'url':path('admin_event_attend', {'id':event.id})} %} {% trans %}Attends{% endtrans %}&#160;
              </li>
            </ul>
          </td>
        </tr>
        {% else %}
        <tr>
          <th>&#160;</th>
          <td>
            <p>{% trans %}Nothing.{% endtrans %} <a href="{{ path('club_event_adminevent_new', {'year':current|date('Y'), 'month':current|date('n')}) }}" class="ico">{% trans %}Create{% endtrans %}</a></p>
          </td>
        </tr>

        {% endfor %}
      </table>

      <!-- Month -->

      <div class="nav-bottom box">
        {% include "ClubEventBundle:AdminEvent:_navigation.html.twig" %}
      </div> <!-- /nav-top -->

{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/clubtournament/css/bracket.css') }}" />
{% endblock %}

<div id="bracket_base">
  <div id="bracket_body">

    {% for round in tournament %}
    <div class='round' id='r{{ round.round }}'>
      <div class='header'>{{ round.name }}</div>

      {% if round.round == tournament|length %}
      <div class='champ'><p>{{ round.winner.name }} </p></div>
      {% else %}

      {% set top = true %}
      {% for match in round.matches %}

      {% if top and match.blank is defined %}
      <div class='blank top'><p></p></div>
      <div class='blank'><p></p></div>
      {% set top = false %}

      {% elseif top %}
      <div class='top'>{% include "ClubTournamentBundle:Tournament:row.html.twig" with {'row':match.0} %}</div>
      <div class='odd'>{% include "ClubTournamentBundle:Tournament:row.html.twig" with {'row':match.1} %}</div>
      {% set top = false %}

      {% elseif match.blank is defined %}
      <div class='blank'><p></p></div>
      <div class='blank'><p></p></div>

      {% else %}
      <div>{% include "ClubTournamentBundle:Tournament:row.html.twig" with {'row':match.0} %}</div>
      <div class='odd'>{% include "ClubTournamentBundle:Tournament:row.html.twig" with {'row':match.1} %}</div>
      {% endif %}

      {% endfor %}
      {% endif %}

    </div>
    {% endfor %}

  </div>
</div>

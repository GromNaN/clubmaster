<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset=utf-8" />
    <title>{% block title %}{% render "ClubLayoutBundle:Misc:Title" %}{% endblock %}</title>
    <meta name="description" content="ClubMaster is an open source management tool">
    <meta name="author" content="Michael Holm">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="{{ asset('bundles/clublayout/css/ui-lightness/jquery-ui-1.8.23.custom.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/clublayout/bootstrap/css/bootstrap.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/clublayout/bootstrap/css/bootstrap-responsive.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/clublayout/css/mystyle.css') }}" />
    <style type="text/css">
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
      }
    </style>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <script type="text/javascript" src="{{ asset('bundles/clublayout/js/jquery-1.8.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clublayout/js/jquery-ui-1.8.23.custom.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clublayout/js/iso8601.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clublayout/bootstrap/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/clublayout/js/modernizr.custom.27457.js') }}"></script>

    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{ asset('bundles/clublayout/images/apple-touch-icon-144-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{ asset('bundles/clublayout/images/apple-touch-icon-114-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{ asset('bundles/clublayout/images/apple-touch-icon-72-precomposed.png') }}">
    <link rel="apple-touch-icon-precomposed" href="{{ asset('bundles/clublayout/images/apple-touch-icon-57-precomposed.png') }}">


    {% block stylesheets %}{% endblock %}
    {% block javascripts %}{% endblock %}

</head>
<body>

    {% block topmenu %}
    {% render "ClubMenuBundle:Default:topMenu" %}
    {% endblock %}

    <div class="container-fluid">
      <div class="row-fluid">

        <div class="span3">
            {% render "ClubLayoutBundle:Misc:Logo" %}
            {% block leftmenu %}
            {% include "ClubLayoutBundle:Default:user_form.html.twig" %}
            {% include "ClubLayoutBundle:Default:login_form.html.twig" %}
            {% render "ClubLayoutBundle:Misc:Search" %}
            {% render "ClubMenuBundle:Default:leftMenu" %}
            {% endblock %}
        </div><!--/span-->

        <div class="span9">


            {% block header %}<div class="page-header"><h1>ClubMaster</h1></div>{% endblock %}
            {% block pagenav %}{% endblock %}

            {% if is_granted('ROLE_ADMIN') %}
                {% block logger %}{% render "ClubLogBundle:Log:LogView" %}{% endblock %}
            {% endif %}

            {% include 'ClubLayoutBundle:Default:flash.html.twig' %}
            {% block body %}{% endblock %}

        </div>
      </div><!--/row-fluid -->

      <hr>
      <footer>
          <p><a href="http://www.clubmaster.org" target="_open">ClubMaster</a>, {% render "ClubUserBundle:Misc:versionBar" %}</p>
      </footer>
    </div><!--/container-fluid -->

</body>
</html>

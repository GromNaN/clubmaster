{% extends "ClubBookingBundle::base.html.twig" %}

{% block pagenav %}
<div class="navbar">
    <div class="navbar-inner">
        <ul class="nav">
            <li><a href="{{ path('club_booking_adminplan_new') }}">{% trans %}Create plan{% endtrans %}</a></li>
        </ul>
    </div>
</div>
{% endblock %}

{% block body %}
<table class="table">
  <thead>
    <tr>
      <th>{% trans %}Name{% endtrans %}</th>
      <th>{% trans %}Period start{% endtrans %}</th>
      <th>{% trans %}Period end{% endtrans %}</th>
      <th>{% trans %}Time{% endtrans %}</th>
      <th>{% trans %}Day{% endtrans %}</th>
      <th class="action">{% trans %}Action{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="6">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for plan in plans %}
    <tr>
      <td>{{ plan.name }}</td>
      <td>{{ plan.periodStart|club_datetime }}</td>
      <td>{{ plan.periodEnd|club_datetime }}</td>
      <td>{{ plan.firstTime|club_time }} - {{ plan.endTime|club_time }}</td>
      <td>{{ plan.day|club_day }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('club_booking_adminplan_edit', { 'id':plan.id })} %}
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('club_booking_adminplan_delete', { 'id':plan.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="6">{% trans %}There are no plans.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}

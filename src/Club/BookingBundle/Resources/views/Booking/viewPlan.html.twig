{% extends "ClubBookingBundle::base.html.twig" %}

{% block body %}
<h2>{% trans %}Booking{% endtrans %}</h2>

<fieldset>
  <legend>{% trans %}Booking Information{% endtrans %}</legend>
  <div class="list">
    <p><label>{% trans %}Location{% endtrans %}</label>{{ field.location.locationName }}</p>
    <p><label>{% trans %}Date{% endtrans %}</label>{{ date|club_date }}</p>
    <p><label>{% trans %}Time{% endtrans %}</label>{{ plan.firstDate|club_time }} - {{ plan.endDate|club_time }}</p>
    <p><label>{% trans %}Field{% endtrans %}</label>{{ field.name }}</p>
    <p><label>{% trans %}Plan{% endtrans %}</label>{{ plan.planCategory.name }}</p>

    {% if field.information %}
      <h3>{% trans %}Information{% endtrans %}</h3>
      <p>{{ field.information }}</p>
    {% endif %}

    <h3>{% trans %}Description{% endtrans %}</h3>
    <p>{{ plan.planCategory.description }}</p>
  </div>
</fieldset>

{% endblock %}

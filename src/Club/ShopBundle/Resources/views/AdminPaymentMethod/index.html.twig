{% extends "::base.html.twig" %}

{% block header %}<h1>Payment Method</h1>{% endblock %}

{% block body %}

<p class="box"><a href="{{ path('admin_shop_payment_method_new') }}" class="btn-create"><span>Create payment_method</span></a></p>

{% include "::flash.html.twig" %}

<form method="post" action="{{ path('admin_shop_payment_method_batch') }}">
<table>
  <thead>
    <tr>
      <th>[x]</th>
      <th>Id</th>
      <th>Payment method</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="4" class="arrow-01">
        <select name="" class="input-text">
          <option value="">Delete selected</option>
          <option value="">Remove selected</option>
          <option value="">Rename selected</option>
          <option value="">Copy selected</option>
        </select>&nbsp;<input type="submit" value="OK" />
      </td>
    </tr>
  </tfoot>
  <tbody>
  {% for payment_method in payment_methods %}
    <tr>
      <td><input type="checkbox" /></td>
      <td>{{ payment_method.id }}</td>
      <td>{{ payment_method.paymentMethodName }}</td>
      <td>
        {% include "::edit_link.html.twig" with {'url':path('admin_shop_payment_method_edit', { 'id':payment_method.id })} %}
        {% include "::delete_link.html.twig" with {'url':path('admin_shop_payment_method_delete', { 'id':payment_method.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="4">There are no payment_methods at the time</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
</form>
{% endblock %}

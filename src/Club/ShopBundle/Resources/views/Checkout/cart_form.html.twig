<table class="style">
  <thead>
  <tr>
    <th width="250">{% trans %}Product name{% endtrans %}</th>
    <th width="80">{% trans %}Unit price{% endtrans %}</th>
    <th width="80">{% trans %}Quantity{% endtrans %}</th>
    <th width="70">{% trans %}Summary{% endtrans %}</th>
  </tr>
  </thead>
  <tbody>
  {% for item in cart.cartProducts %}
  <tr>
    <td>{{ item.productName }}</td>
    <td>{{ item.price|club_price }}</td>
    <td>{{ item.quantity }}
      {% if item.type == 'product' %}<a href="{{ path('club_shop_checkout_increment', {'id':item.id}) }}">[+]</a>  <a href="{{ path('club_shop_checkout_decrement', {'id':item.id}) }}">[-]</a>{% endif %}
      {% if item.type == 'coupon' %}<a href="{{ path('club_shop_checkout_decrement', {'id':item.id}) }}">[-]</a>{% endif %}
    </td>
    <td>{{ item.summary|club_price }}</td>
  </tr>
  {% else %}
  <tr>
    <td colspan="4">{% trans %}Your cart is empty.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
  <tfoot>
  <tr>
    <td colspan="4">&#160;</td>
  </tr>
  <tr>
    <td style="text-align: right; padding-right: 20px;" colspan="3"><b>{% trans %}Summary{% endtrans %}</b></td>
    <td>{{ cart.price|club_price }}</td>
  </tr>
  </tfoot>
</table>


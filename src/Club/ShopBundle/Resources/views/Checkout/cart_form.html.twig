<table>
  <thead>
  <tr>
    <th width="250">Product name</th>
    <th width="80">Unit price</th>
    <th width="80">Quantity</th>
    <th width="70">Summary</th>
  </tr>
  </thead>
  <tbody>
  {% for item in cart.cartProducts %}
  <tr>
    <td>{{ item.productName }}</td>
    <td>{{ item.vatPrice|price }}</td>
    <td>{{ item.quantity }} <a href="{{ path('club_shop_checkout_increment', {'id':item.id}) }}">[+]</a>  <a href="{{ path('club_shop_checkout_decrement', {'id':item.id}) }}">[-]</a></td>
    <td>{{ item.vatSummary|price }}</td>
  </tr>
  {% else %}
  <tr>
    <td colspan="4">Your cart is empty.</td>
  </tr>
  {% endfor %}
  </tbody>
  <tfoot>
  <tr>
    <td colspan="4">&#160;</td>
  </tr>
  <tr>
    <td style="text-align: right; padding-right: 20px;" colspan="3"><b>Total</b></td>
    <td>{{ cart.vatPrice|price }}</td>
  </tr>
  </tfoot>
</table>


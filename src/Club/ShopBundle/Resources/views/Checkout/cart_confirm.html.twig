<table class="style">
  <thead>
  <tr>
    <th width="250">{% trans %}Product name{% endtrans %}</th>
    <th width="80">{% trans %}Unit price{% endtrans %}</th>
    <th width="80">{% trans %}Quantity{% endtrans %}</th>
    <th width="70">{% trans %}Summary{% endtrans %}</th>
  </tr>
  </thead>
  <tbody>
  {% for item in cart.cartProducts %}
  <tr>
    <td>{{ item.productName }}</td>
    <td>{{ item.price|price }}</td>
    <td>{{ item.quantity }}</td>
    <td>{{ item.summary|price }}</td>
  </tr>
  {% else %}
  <tr>
    <td colspan="4">{% trans %}Your cart is empty.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
  <tfoot>
  <tr>
    <td colspan="4">&#160;</td>
  </tr>
  <tr>
    <td style="text-align: right; padding-right: 20px;" colspan="3"><b>{% trans %}Summary{% endtrans %}</b></td>
    <td>{{ cart.price|price }}</td>
  </tr>
  </tfoot>
</table>


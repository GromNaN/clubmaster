{% extends "::base.html.twig" %}

{% block body %}

<div id="sf_admin_container">
<table>
  <thead>
  <tr>
    <th width="250">Produkt</th>
    <th width="80">Pris</th>
    <th width="80">Antal</th>
    <th width="70">Total</th>
  </tr>
  </thead>
  <tbody>
  {% for item in basket_items %}
  <tr>
    <td>{{ item.name }}</td>
    <td>{{ item.price }}</td>
    <td>{{ item.qty }}</td>
    <td>{{ item.qty*item.price }}</td>
  </tr>
  {% else %}
  <tr>
    <td colspan="4">Din kurv er tom.</td>
  </tr>
  {% endfor %}
  </tbody>
  <tfoot>
  <tr>
    <td colspan="4">&#160;</td>
  </tr>
  <tr>
    <td style="text-align: right; padding-right: 20px;" colspan="3">Sub total</td>
    <td>{{ basket.price }}</td>
  </tr>
  <tr>
    <td style="text-align: right; padding-right: 20px;" colspan="3">MOMS</td>
    <td>0%</td>
  </tr>
  <tr>
    <td style="text-align: right; padding-right: 20px;" colspan="3"><b>Total</b></td>
    <td>{{ basket.price }}</td>
  </tr>
  </tfoot>
</table>

{% endblock %}

<table>
  <thead>
  <tr>
    <th width="250">Product name</th>
    <th width="80">Unit price</th>
    <th width="80">Quantity</th>
    <th width="70">Summary</th>
  </tr>
  </thead>
  <tbody>
  {% for item in order.orderProducts %}
  <tr>
    <td>{{ item.productName }}</td>
    <td>{{ item.vatPrice|price }}</td>
    <td>{{ item.quantity }}</td>
    <td>{{ item.vatPriceSummary|price }}</td>
  </tr>
  {% else %}
  <tr>
    <td colspan="4">You have no products.</td>
  </tr>
  {% endfor %}
  </tbody>
  <tfoot>
  <tr>
    <td colspan="4">&#160;</td>
  </tr>
  <tr>
    <td style="text-align: right; padding-right: 20px;" colspan="3"><b>Total</b></td>
    <td>{{ order.vatPrice|price }}</td>
  </tr>
  </tfoot>
</table>


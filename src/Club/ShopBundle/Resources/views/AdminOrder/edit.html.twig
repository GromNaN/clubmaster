{% extends "::base.html.twig" %}

{% block body %}
<h1>Order</h1>

<h2>Customer</h2>
<p>Name: meh ;)</p>

<h2>Shipping</h2>
<p>Name: meeh ;)</p>
<p>{{ order.shipping }}</p>

<h2>Billing</h2>
<p>Name: meeeh ;)</p>
<p>{{ order.paymentMethod }}</p>

<h2>Order history</h2>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Order status</th>
      <th>Note</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th colspan="3">&#160;</th>
    </tr>
  </tfoot>
  <tbody>
  {% for status in order.orderStatusHistory %}
    <tr>
      <td>{{ status.createdAt|date('Y-m-d H:i:s') }}</td>
      <td>{{ status.orderStatus.statusName }}</td>
      <td>{{ status.note }}</td>
  {% endfor %}
  </tbody>
</table>

<form method="post" action="{{ path('admin_shop_order_edit', {'id':order.id}) }}">
{% include "ClubShopBundle:AdminOrder:form.html.twig" with {'form': form} %}
</form>

{% endblock %}

{% extends "ClubTeamBundle::base.html.twig" %}

{% block body %}
<h2>{% trans %}Attends{% endtrans %}</h2>

<table class="table">
  <thead>
    <tr>
      <th>{% trans %}Team{% endtrans %}</th>
      <th>{% trans %}User{% endtrans %}</th>
      <th class="action">{% trans %}Action{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="3">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for participant in schedule.users %}
    <tr>
      <td>{{ schedule.team.teamName }}</td>
      <td>{{ participant.user.profile.name }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('club_team_adminschedule_unattend', {'schedule_id':schedule.id, 'id':participant.id})} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="3">{% trans %}There are no participants.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}

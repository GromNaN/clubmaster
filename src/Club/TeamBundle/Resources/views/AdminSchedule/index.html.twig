{% extends "ClubTeamBundle::base.html.twig" %}

{% block body %}
<p class="box"><a href="{{ path('club_team_adminschedule_new', {'team_id':team.id}) }}" class="btn-create"><span>{% trans %}Create schedule{% endtrans %}</span></a></p>

<table class="style">
  <thead>
    <tr>
      <th>{% trans %}Team name{% endtrans %}</th>
      <th>{% trans %}First date{% endtrans %}</th>
      <th>{% trans %}End date{% endtrans %}</th>
      <th>{% trans %}Level{% endtrans %}</th>
      <th>{% trans %}Created at{% endtrans %}</th>
      <th>{% trans %}Action{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="6">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for schedule in schedules %}
    <tr>
      <td>{{ schedule.team.teamName }}</td>
      <td>{{ schedule.firstDate|date('Y-m-d H:i') }}</td>
      <td>{{ schedule.endDate|date('Y-m-d H:i') }}</td>
      <td>{{ schedule.level.levelName }}</td>
      <td>{{ schedule.createdAt|date('Y-m-d H:i:s') }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('club_team_adminschedule_edit', { 'id':schedule.id,'team_id':team.id })} %}
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('club_team_adminschedule_delete', { 'id':schedule.id,'team_id':team.id })} %}
        {% include "ClubLayoutBundle:Default:repetition_link.html.twig" with {'url':path('club_team_adminrepetition_index', { 'schedule_id':schedule.id,'team_id':team.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="6">{% trans %}There are no schedules.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}

{% extends "ClubTeamBundle::base.html.twig" %}

{% block body %}
<p class="box"><a href="{{ path('club_team_adminteam_new', {'team_category_id':team_category.id}) }}" class="btn-create"><span>{% trans %}Create team{% endtrans %}</span></a></p>

<table class="style">
  <thead>
    <tr>
      <th>{% trans %}Team name{% endtrans %}</th>
      <th>{% trans %}First date{% endtrans %}</th>
      <th>{% trans %}End date{% endtrans %}</th>
      <th>{% trans %}Level{% endtrans %}</th>
      <th>{% trans %}Action{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="5">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for team in teams %}
    <tr>
      <td>{{ team.teamCategory.teamName }}</td>
      <td>{{ team.firstDate|club_datetime }}</td>
      <td>{{ team.endDate|club_datetime }}</td>
      <td>{{ team.level.levelName }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('club_team_adminteam_edit', { 'id':team.id,'team_category_id':team_category.id })} %}
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('club_team_adminteam_delete', { 'id':team.id,'team_category_id':team_category.id })} %}
        {% include "ClubLayoutBundle:Default:repetition_link.html.twig" with {'url':path('club_team_adminrepetition_index', { 'team_category_id':team_category.id,'team_id':team.id })} %}
        {% include "ClubLayoutBundle:Default:attends_link.html.twig" with {'url':path('club_team_adminteam_participant', { 'id':team.id,'team_category_id':team_category.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="5">{% trans %}There are no teams.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}

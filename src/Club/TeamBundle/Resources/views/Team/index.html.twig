{% extends "ClubTeamBundle::base.html.twig" %}

{% block body %}

<h2>{% trans %}Team{% endtrans %}</h2>

{% if teams|length == 0 %}
<p class="msg info">{% trans %}There are no teams.{% endtrans %}</p>
{% else %}
<table class="style">
  <tfoot>
    <tr class="bg">
      <td colspan="4">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% set prev_date = '' %}
  {% set date = '' %}
  {% for team in teams %}
    {% set prev_date = date %}
    {% set date = team.firstDate|club_date('full') %}

    {% if date != prev_date %}
    <tr>
      <th colspan="4">{{ date }}</th>
    </tr>
    {% endif %}
    <tr>
      <td>{{ team.firstDate|date('H:i') }} - {{ team.endDate|date('H:i') }}</td>
      <td>{{ team.team.teamName }} ( {{ team.users|length }}/{{ team.maxAttend }} )</td>
      <td>{{ team.location.locationName }}</td>
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
      <td>
        {% if user.attend(team) %}
          {% include "ClubLayoutBundle:Default:unattend_link.html.twig" with {'url':path('club_team_team_unattend', { 'id':team.id })} %}
        {% else %}
          {% include "ClubLayoutBundle:Default:attend_link.html.twig" with {'url':path('club_team_team_attend', { 'id':team.id })} %}
        {% endif %}
      </td>
      {% endif %}
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endif %}
{% endblock %}

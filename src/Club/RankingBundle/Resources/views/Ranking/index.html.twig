{% extends "ClubRankingBundle::base.html.twig" %}

{% block pagenav %}
{% if is_granted('IS_AUTHENTICATED_FULLY')  %}
<div class="navbar">
    <div class="navbar-inner">
        <ul class="nav">
            <li><a href="{{ path('club_match_match_new') }}">{% trans %}Insert match{% endtrans %}</a></li>
        </ul>
    </div>
</div>
{% endif %}
{% endblock %}

{% block body %}
{% render "ClubMatchBundle:Match:Recent" with {'limit':7} %}

{% for ranking in rankings %}
  <h3><a href="{{ path('club_ranking_ranking_show', {'id':ranking.id}) }}">{{ ranking.name }}</a></h3>
  {% render "ClubRankingBundle:Ranking:Top" with {'id':ranking.id, 'limit':ranking_view_top} %}

{% else %}
  <p class="msg info">{% trans %}There are no rankings.{% endtrans %}</p>
{% endfor %}

{% endblock %}

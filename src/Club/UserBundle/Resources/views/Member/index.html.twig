{% extends "ClubUserBundle::base.html.twig" %}

{% block header %}
<div class="page-header">
    <h1><img src="{{ asset('bundles/clublayout/images/icons/32x32/group.png') }}" /> {% trans %}Members{% endtrans %}</h1>
</div>
{% endblock %}

{% block pagenav %}
{% include "ClubLayoutBundle:Default:ajax_user.html.twig" with {'search_field':'#query_query', 'input_id':'','url':'api/users/search'} %}

<div class="navbar">
  <div class="navbar-inner">
    <form class="navbar-search pull-right">
      <input type="text" class="search-query" placeholder="Search" id="">
    </form>
  </div>
</div>
{% endblock %}

{% block body %}

<table class="table">
  <thead>
    <tr>
      <th>{% trans %}Name{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td>&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for user in users %}
    <tr>
      <td><a href="{{ path('club_user_member_show', {'id':user.id}) }}">{{ user.name }}</a></td>
    </tr>
  {% else %}
  <tr>
    <td>{% trans %}There are no users in the system.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}

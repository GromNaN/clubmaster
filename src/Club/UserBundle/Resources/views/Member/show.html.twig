{% extends "ClubUserBundle::base.html.twig" %}

{% block header %}
<div class="page-header">
    <h1><img class="img-polaroid" src="{{ asset('bundles/clublayout/images/icons/32x32/user.png') }}" /> {{ user.name }} ({{ user.memberNumber }})</h1>
</div>
{% endblock %}

{% block body %}

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<table class="table table-bordered">
{% if user.profile.profileEmail %}
    <tr>
        <th>{% trans %}Email{% endtrans %}</th>
        <td>{{ user.profile.profileEmail.emailAddress }}</td>
    </tr>
    {% endif %}
    {% if user.profile.profilePhone %}
    <tr>
        <th>{% trans %}Phone{% endtrans %}</th>
        <td>{{ user.profile.profilePhone.phoneNumber }}</td>
    </tr>
    {% endif %}
</table>
{% endif %}

{{ output|raw }}

{% endblock %}

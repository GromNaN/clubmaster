{% extends "ClubLayoutBundle:Default:base.html.twig" %}

{% block header %}<h1>Location</h1>{% endblock %}

{% block body %}
<p class="box"><a href="{{ path('admin_location_new') }}" class="btn-create"><span>Create location</span></a></p>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Parent</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="4">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for location in locations %}
    <tr>
      <td>{{ location.id }}</td>
      <td>{{ location.location }}</td>
      <td>{{ location.locationName }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('admin_location_edit', { 'id':location.id })} %}
        {% include "ClubLayoutBundle:Default:delete_link.html.twig" with {'url':path('admin_location_delete', { 'id':location.id })} %}
        <a href="{{ path('admin_location_config', {'id':location.id}) }}">Config</a>
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="4">There are no locations at the time</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}

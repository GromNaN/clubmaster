{% extends "::base.html.twig" %}

{% block body %}
<h1>Role</h1>
<p class="box"><a href="{{ path('role_new') }}" class="btn-create"><span>Create role</span></a></p>

{% include "::flash.html.twig" %}

<form method="post" action="{{ path('role_batch') }}">
<table>
  <thead>
    <tr>
      <th>[x]</th>
      <th>Id</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="4" class="arrow-01">
        <select name="" class="input-text">
          <option value="">Delete selected</option>
          <option value="">Remove selected</option>
          <option value="">Rename selected</option>
          <option value="">Copy selected</option>
        </select>&nbsp;<input type="submit" value="OK" />
      </td>
    </tr>
  </tfoot>
  <tbody>
  {% for role in roles %}
    <tr>
      <td><input type="checkbox" /></td>
      <td>{{ role.id }}</td>
      <td>{{ role.roleName }}</td>
      <td>
        {% include "::edit_link.html.twig" with {'url':path('role_edit', { 'id':role.id })} %}
        {% include "::delete_link.html.twig" with {'url':path('role_delete', { 'id':role.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="5">There are no roles at the time.</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
</form>

{% endblock %}

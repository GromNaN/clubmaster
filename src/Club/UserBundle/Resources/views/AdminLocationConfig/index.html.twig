{% extends "ClubUserBundle::base.html.twig" %}


{% block body %}
<table>
  <thead>
    <tr>
      <th>Key</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="3">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for config in configs %}
    <tr>
      <td>{{ config.config.configKey }}</td>
      <td>{{ config.value }}</td>
      <td>
        {% include "ClubLayoutBundle:Default:edit_link.html.twig" with {'url':path('admin_location_config_edit', { 'id':config.id })} %}
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="3">There are no configs for this location./td>
  </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}

{% extends "::base.html.twig" %}

{% block search %}
<!-- Search -->
<form action="#" method="get" id="search">
  <fieldset>
    <legend>Search</legend>

    <p><input type="text" size="17" name="" class="input-text" />&nbsp;<input type="submit" value="OK" class="input-submit-02" /><br />
    <a href="javascript:toggle('search-options');" class="ico-drop">Advanced search</a></p>

    <!-- Advanced search -->
    <div id="search-options" style="display:none;">

      <p>
        <label><input type="checkbox" name="" checked="checked" /> Option I.</label><br />
        <label><input type="checkbox" name="" /> Option II.</label><br />
        <label><input type="checkbox" name="" /> Option III.</label>
      </p>

    </div> <!-- /search-options -->

  </fieldset>
</form>

{% endblock %}

{% block body %}
<h1>User</h1>
<p class="box"><a href="{{ path('admin_user_new') }}" class="btn-create"><span>Create user</span></a></p>

{{ app.session.flash('notice') }}

<form method="post" action="{{ path('admin_user_batch') }}">
<table class="tablesorter">
  <thead>
    <tr>
      <th>[x]</th>
      <th>Id</th>
      <th>Name</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="7" class="arrow-01">
        <select name="" class="input-text">
          <option value="">Delete selected</option>
          <option value="">Remove selected</option>
          <option value="">Rename selected</option>
          <option value="">Copy selected</option>
        </select>&nbsp;<input type="submit" value="OK" />
      </td>
    </tr>
  </tfoot>
  <tbody>
  {% for user in users %}
    <tr>
      <td><input type="checkbox" /></td>
      <td>{{ user.id }}</td>
      <td>{{ user.profile.firstName }} {{ user.profile.lastName }}</td>
      <td>{{ user.createdAt|date("Y-m-d") }}</td>
      <td>
        <a href="{{ path('admin_user_edit', { 'id':user.id }) }}"><img src="{{ asset('images/ico-edit.gif') }}" class="ico" alt="Edit" /></a>
        <a href="{{ path('admin_user_delete', { 'id':user.id }) }}"><img src="{{ asset('images/ico-delete.gif') }}" class="ico" alt="Delete" /></a>
        <a href="{{ path('admin_user_subscription', { 'id':user.id }) }}"><img src="{{ asset('images/icons/16/System-Security-Card-icon.png') }}" alt="Subscription" /></a>
        <a href="{{ path('admin_user_shop', { 'id':user.id }) }}"><img src="{{ asset('images/icons/16/shopping-cart-insert-icon.png') }}" alt="Shop as" /></a>
        <a href="{{ path('admin_user_ban', { 'id':user.id }) }}"><img src="{{ asset('images/icons/16/Actions-im-ban-user-icon.png') }}" alt="Ban" /></a>
        <a href="{{ path('admin_user_address', { 'id':user.id }) }}"><img src="{{ asset('images/icons/16/Home-icon.png') }}" alt="Address"/></a>
        <a href="{{ path('admin_user_phone', { 'id':user.id }) }}"><img src="{{ asset('images/icons/16/telefono-icon.png') }}" alt="Phone" /></a>
        <a href="{{ path('admin_user_email', { 'id':user.id }) }}"><img src="{{ asset('images/icons/16/Mail-icon.png') }}" alt="Email" /></a>
        <a href="{{ path('admin_user_group', { 'id':user.id }) }}"><img src="{{ asset('images/icons/16/user-group-icon.png') }}" alt="Group" /></a>
        <a href="{{ path('admin_user_note', { 'id':user.id }) }}"><img src="{{ asset('images/icons/16/Folder-icon.png') }}" alt="Note" /></a>
      </td>
    </tr>
  {% else %}
  <tr>
    <td colspan="5">There are no users at the time</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
</form>
{% endblock %}

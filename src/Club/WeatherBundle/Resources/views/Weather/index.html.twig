{% extends "ClubWeatherBundle::base.html.twig" %}

{% block body %}
        <div class="span11">
          <div class="hero-unit">
            <h1><img alt="{{ curr.weatherDesc.0.value }}" src="{{ curr.weatherIconUrl.0.value }}" /> {% trans %}Weather right now!{% endtrans %}</h1>
            <p>
                {% trans with {'%time%':curr.observation_time|club_datetime} %}The weather was last updated at %time%.{% endtrans %}<br>
                {% trans with {'%temp%':curr.temp_C} %}Current temperature: %temp%{% endtrans %}<br>
                {% trans with {'%speed%':curr.windspeedKmph, '%dir%':curr.winddir16Point} %}Current wind: %speed% km/t, %dir%{% endtrans %}<br />
                {% trans with {'%sunrise%':curr.sunrise|club_time,'%sunset%':curr.sunset|club_time} %}Sunrise: %sunrise%, sunset: %sunset%{% endtrans %}
            </p>
          </div>
          <div class="row-fluid">
            {% include "ClubWeatherBundle:Weather:weather_table.html.twig" with {'weather':weather.0} %}
            {% include "ClubWeatherBundle:Weather:weather_table.html.twig" with {'weather':weather.1} %}
            {% include "ClubWeatherBundle:Weather:weather_table.html.twig" with {'weather':weather.2} %}
          </div><!--/row-->
          <div class="row-fluid">
            {% include "ClubWeatherBundle:Weather:weather_table.html.twig" with {'weather':weather.3} %}
            {% include "ClubWeatherBundle:Weather:weather_table.html.twig" with {'weather':weather.4} %}
          </div><!--/row-->
        </div><!--/span-->
{% endblock %}

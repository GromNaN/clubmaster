    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="{{ path('localized') }}"><img src="{{ asset('bundles/clublayout/images/logo_top.png') }}" /></a>
          <div class="nav-collapse collapse">
             {% if is_granted('IS_AUTHENTICATED_FULLY') %}

             <p class="navbar-text pull-right">
                {% for item in menu_right %}
                <a href="{{ item.route }}"><span>{{ item.name }}</span></a>
                {% endfor %}
             </p>
             {% endif %}

             <ul class="nav">
                {% for item in menu %}

                    {% if item.header is defined and item.items is defined %}
                        {% if item.items|length == 1 %}
                            {% for i in item.items %}
                            <li><a href="{{ i.route }}">{{ i.name }}</a></li>
                            {% endfor %}
                        {% else %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ item.header }} <b class="caret"></b></a>
                            <ul class="dropdown-menu">

                                {% for i in item.items %}
                                    <li><a href="{{ i.route }}">{{ i.name }}</a></li>
                                {% endfor %}

                            </ul>
                        </li>
                        {% endif %}
                    {% else %}
                        <li><a href="{{ item.route }}">{{ item.name }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>


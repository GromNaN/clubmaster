<h2>{% trans %}Your teams{% endtrans %}</h2>

<table class="style">
  <thead>
    <tr>
      <th>{% trans %}Team{% endtrans %}</th>
      <th>{% trans %}Date{% endtrans %}</th>
      <th>{% trans %}Time{% endtrans %}</th>
    </tr>
  </thead>
  <tfoot>
    <tr class="bg">
      <td colspan="3">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for team in teams %}
    <tr>
      <td>{{ team.team.teamName }}</td>
      <td>{{ team.firstDate|club_date }}</td>
      <td>{{ team.firstDate|club_time }} - {{ team.endDate|club_time }}</td>
    </tr>
  {% else %}
  <tr>
    <td colspan="3">{% trans %}You have no coming teams.{% endtrans %}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>


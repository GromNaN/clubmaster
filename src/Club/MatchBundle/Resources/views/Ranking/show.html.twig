{% extends "ClubMatchBundle::base.html.twig" %}

{% block body %}

{% include "ClubMatchBundle:Ranking:match_button.html.twig" %}

<h3><a href="{{ path('club_match_ranking_show', {'id':league.id}) }}">{{ league.name }}</a></h3>

<h4>{% trans %}Ranking info{% endtrans %}</h4>
<table class="table">
  <tbody>
    <tr>
      <th>{% trans %}Period{% endtrans %}</th>
      <td>{{ league.startDate|club_date }} - {{ league.endDate|club_date }}</td>
    </tr>
    <tr>
      <th>{% trans %}Ranking type{% endtrans %}</th>
      {% if league.inviteOnly %}
      <td>{% trans %}Invite only{% endtrans %}</td>
      {% else %}
      <td>{% trans %}Open for all{% endtrans %}</td>
      {% endif %}
    </tr>
    <tr>
      <th>{% trans %}Sets per match{% endtrans %}</th>
      <td>{{ league.gameSet }}</td>
    </tr>
    <tr>
      <th>{% trans %}Point for victory{% endtrans %}</th>
      <td>{{ league.rule.pointWon }}</td>
    </tr>
    <tr>
      <th>{% trans %}Point for defeat{% endtrans %}</th>
      <td>{{ league.rule.pointLost }}</td>
    </tr>
    <tr>
      <th>{% trans %}Matches with same opponent{% endtrans %}</th>
      <td>{{ league.rule.matchSamePlayer }}</td>
    </tr>
  </tbody>
</table>

{% render "ClubMatchBundle:Ranking:Top" with {'id':league.id, 'limit':50} %}
{% render "ClubMatchBundle:Ranking:RecentMatches" with {'id':league.id, 'limit':50} %}

{% endblock %}

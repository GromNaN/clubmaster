{% extends "ClubRequestBundle::base.html.twig" %}

{% block body %}

{% if is_granted('IS_AUTHENTICATED_FULLY') %}
<p class="box">
  <a href="{{ path('club_request_playermarket_new') }}" class="btn-info"><span>{% trans %}Create request{% endtrans %}</span></a>
</p>
{% endif %}

<table class="style">
  <thead>
    <tr class="bg">
      <th>Time</th>
      <th>User</th>
      <th>Action</th>
    </tr>
  <thead>
  <tfoot>
    <tr class="bg">
      <td colspan="3">&#160;</td>
    </tr>
  </tfoot>
  <tbody>
  {% for item in market %}
    <tr>
      <td>{{ item.playtime|club_datetime }}</td>
      <td>{{ item.user.name }}</td>
      <td>
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% include "ClubLayoutBundle:Default:respond_link.html.twig" with {'url':path('club_request_playermarket_comment', { 'id':item.id })} %}
      {% endif %}
      </td>
    </tr>
  {% else %}
    <tr>
      <td colspan="3">There are not items in the players market.</td>
    </tr>
  {% endfor %}
  </tbody>
</table>

{% endblock %}

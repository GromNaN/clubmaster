{% extends "ClubWelcomeBundle::base.html.twig" %}

{% block body %}
<p>Welcome to ClubMaster</p>

{% if welcome.content is defined %}
{{ welcome.content|raw }}
{% endif %}

{% for post in posts %}
<h3>{{ post.title }}</h3>
<p>{% trans with {'%date%':post.createdAt|club_datetime,'%author%':post.user.name} %}Posted on %date% by %author%.{% endtrans %}</p>
<p>{{ post.message|raw }}</p>
{% endfor %}

{% endblock %}
